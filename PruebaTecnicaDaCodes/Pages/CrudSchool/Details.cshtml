@page
@model PruebaTecnicaDaCodes.Pages.CrudSchool.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>School</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @("Materia")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.Subject)
        </dd>
        <dt class="col-sm-2">
            @("Profesor")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.Teacher)
        </dd>
        <dt class="col-sm-2">
            @("Numero De Estudiantes")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.NumberOfStudents)
        </dd>
        <dt class="col-sm-2">
            @("Horario")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.Schedule)
        </dd>
        <dt class="col-sm-2">
            @("Numero De Aprovados")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.ApprovedQuantities)
        </dd>
        <dt class="col-sm-2">
            @("Numero De Reprobados")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.FailedAmounts)
        </dd>
    </dl>
</div>
<div class="mt-2">
    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.School.Id">Editar</a> |
    <a class="btn btn-secondary" asp-page="./Index">Volver</a>
</div>
