@page
@model PruebaTecnicaDaCodes.Pages.CrudSchool.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>Esta seguro de eliminar el registro de la escuela?</h3>
<div>
    <h4>School</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @("Materia")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.Subject)
        </dd>
        <dt class="col-sm-2">
            @("Porfesor")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.Teacher)
        </dd>
        <dt class="col-sm-2">
            @("Numero Estudiantes")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.NumberOfStudents)
        </dd>
        <dt class="col-sm-2">
            @("Horario")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.Schedule)
        </dd>
        <dt class="col-sm-2">
            @("Cantidad De Aprovados")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.ApprovedQuantities)
        </dd>
        <dt class="col-sm-2">
            @("Cantidad De Reprobados")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.FailedAmounts)
        </dd>
    </dl>
    <br />
   <div class="mt-2">
        <form method="post">
            <input type="hidden" asp-for="School.Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a class="btn btn-secondary" asp-page="./Index">Volver</a>
        </form>
   </div>
   
</div>
